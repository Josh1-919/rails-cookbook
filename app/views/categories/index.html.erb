<div class="banner" style="background-image: url('<%= image_path "banner.jpg" %>')">
  <div>
    <h1>Cookbook</h1>
    <h3>Save your favorite recipes</h3>
  </div>
</div>

<div class="container">
  <div class="title-top">
    <h2>Categories:</h2>
    <%= link_to "Add new Recipe", new_category_path, class: "btn btn-warning" %>
  </div>
</div>

<div class="cards">
  <% @categories.each do |category| %>
    <%= link_to category_path(category) do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://plus.unsplash.com/premium_photo-1699976107432-7d2b5c55b222?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)">
        <div>
        <h2><%= category.name %></h2>
        <p><%= category.recipes.count %> recipes</p>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>

</div>
